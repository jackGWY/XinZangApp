<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.guo.xinzangapp.medicineActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/bMedicine1"
        android:padding="20dp"
        android:textSize="@dimen/medicineTextListSize"
        android:layout_height="wrap_content"
        android:text="阿司匹林肠溶片"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bMedicine2"
        android:padding="20dp"
        android:textSize="@dimen/medicineTextListSize"
        android:text="硝酸甘油片"
        />

        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="复方乙酰水杨酸片"
            android:textSize="@dimen/medicineTextListSize"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="硫酸氢氯吡格雷片"
            android:textSize="@dimen/medicineTextListSize"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="替格瑞洛片"
            android:textSize="@dimen/medicineTextListSize"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="酒石酸美托洛尔片"
            android:textSize="@dimen/medicineTextListSize"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="富马酸比索洛尔片"
            android:textSize="@dimen/medicineTextListSize"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="相关文章"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/medicineTextListSize"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artical_1"
            android:padding="20dp"
            android:text="心脏病药物迎来重磅炸弹，人类基因组数据淘金时代已经开启了 | 奇点实力派"
            android:textSize="@dimen/medicineArtical"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

    </LinearLayout>

</ScrollView>
