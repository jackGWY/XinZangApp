<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp" >

    <TextView
        android:id="@+id/sport_title"
        android:layout_width="match_parent"
        android:text="sport_title"
        android:layout_height="wrap_content"
        android:padding="@dimen/diaryItemPadding"
        android:textSize="@dimen/diaryItemTextSize"
        android:layout_marginTop="@dimen/diaryItemMargingTop" />


    <TextView
        android:id="@+id/feeling_title"
        android:layout_width="match_parent"
        android:text="feeling_title"
        android:layout_height="wrap_content"
        android:padding="@dimen/diaryItemPadding"
        android:textSize="@dimen/diaryItemTextSize"
        android:layout_marginTop="@dimen/diaryItemMargingTop" />

    <View
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:layout_width="fill_parent">
    </View>

</LinearLayout>