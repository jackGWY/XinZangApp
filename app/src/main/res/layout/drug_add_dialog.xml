<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drug_add_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/add_a1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="top|left"
            android:hint="输入药物名字"
            android:minHeight="145dp"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/add_a2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="top|left"
            android:hint="药物分类"
            android:minHeight="145dp"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/add_a3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="top|left"
            android:hint="输入药物含量"
            android:minHeight="145dp"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/add_a4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="top|left"
            android:hint="输入用法"
            android:minHeight="145dp"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/add_a5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="top|left"
            android:hint="输入用量"
            android:minHeight="145dp"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/add_a6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="top|left"
            android:hint="输入副作用"
            android:minHeight="145dp"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/add_a7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_bg"
            android:gravity="top|left"
            android:hint="输入注意事项"
            android:minHeight="145dp"
            android:textSize="18sp" />

        <!--<Button-->
        <!--android:id="@+id/btn_save_message_tilte"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:text="保存" />-->

    </LinearLayout>



</ScrollView>