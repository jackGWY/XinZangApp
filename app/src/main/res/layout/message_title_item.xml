<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp" >

    <TextView
        android:id="@+id/message_title"
        android:layout_width="match_parent"
        android:text="message_title"
        android:layout_height="wrap_content"
        android:padding="@dimen/diaryItemPadding"
        android:textSize="@dimen/messageTitleTextSize"
        android:layout_marginTop="@dimen/diaryItemMargingTop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="楼主："
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/messageOwnerTextSize"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/message_owner"
            android:layout_width="match_parent"
            android:text="message_owner"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/messageOwnerTextSize"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <View
        android:layout_height="1px"
        android:layout_marginTop="18dp"
        android:background="#000000"
        android:layout_width="fill_parent">
    </View>

</LinearLayout>