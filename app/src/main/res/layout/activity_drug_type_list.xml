<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guo.xinzangapp.medicine.drugTypeListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drugfenlei"
            android:text="心脏病药物的分类"
            android:background="@color/colorAccent"
            android:layout_centerVertical="true"
            android:textColor="@color/drugTextColor"
            android:textSize="@dimen/medicine_title"
            android:layout_marginBottom="@dimen/medicine_margin_bottom"
            android:textStyle="bold"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/drugtype1"
            android:layout_height="wrap_content"
            android:text="扩张冠脉药"
            android:lineSpacingExtra="@dimen/lineSpacingExtra_medicine"
            android:textColor="@color/drugTextColor"
            android:textSize="@dimen/drugTypeListTitle"
            android:layout_marginBottom="@dimen/medicine_margin_bottom"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/drugtype2"
            android:layout_height="wrap_content"
            android:text="洋地黄制剂"
            android:lineSpacingExtra="@dimen/lineSpacingExtra_medicine"
            android:textColor="@color/drugTextColor"
            android:textSize="@dimen/drugTypeListTitle"
            android:layout_marginBottom="@dimen/medicine_margin_bottom"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/drugtype3"
            android:layout_height="wrap_content"
            android:text="升压药"
            android:lineSpacingExtra="@dimen/lineSpacingExtra_medicine"
            android:textColor="@color/drugTextColor"
            android:textSize="@dimen/drugTypeListTitle"
            android:layout_marginBottom="@dimen/medicine_margin_bottom"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/drugtype4"
            android:layout_height="wrap_content"
            android:text="降压药"
            android:lineSpacingExtra="@dimen/lineSpacingExtra_medicine"
            android:textColor="@color/drugTextColor"
            android:textSize="@dimen/drugTypeListTitle"
            android:layout_marginBottom="@dimen/medicine_margin_bottom"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/drugtype5"
            android:layout_height="wrap_content"
            android:text="利尿剂"
            android:lineSpacingExtra="@dimen/lineSpacingExtra_medicine"
            android:textColor="@color/drugTextColor"
            android:textSize="@dimen/drugTypeListTitle"
            android:layout_marginBottom="@dimen/medicine_margin_bottom"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/drugtype6"
            android:layout_height="wrap_content"
            android:text="受体阻滞剂"
            android:lineSpacingExtra="@dimen/lineSpacingExtra_medicine"
            android:textColor="@color/drugTextColor"
            android:textSize="@dimen/drugTypeListTitle"
            android:layout_marginBottom="@dimen/medicine_margin_bottom"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/drugtype7"
            android:layout_height="wrap_content"
            android:text="抗心律失常"
            android:lineSpacingExtra="@dimen/lineSpacingExtra_medicine"
            android:textColor="@color/drugTextColor"
            android:textSize="@dimen/drugTypeListTitle"
            android:layout_marginBottom="@dimen/medicine_margin_bottom"
            />
        <View
            android:layout_height="1px"
            android:background="#000000"
            android:layout_width="fill_parent">
        </View>
    </LinearLayout>

</ScrollView>
